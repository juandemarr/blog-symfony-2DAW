{% extends 'base.html.twig' %}

{#{% block title %}Log in!{% endblock %}#}

{% block body %}
{% include "_header.html.twig" %}
<section class="main container-fluid container-lg">
    <div class="d-flex justify-content-center flex-column container-form mx-auto mt-4 py-4 px-3">
    <h1 class="mb-4 text-center">Log in</h1>
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div>
            <label for="inputUsername">Username</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" autocomplete="username" required autofocus>
        </div>
        <div>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
        </div>
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-violet mt-2 mb-3" type="submit">
            Sign in
        </button>
    </form>
    </div>
</section>

{% include "_footer.html.twig" %}

{% endblock %}
